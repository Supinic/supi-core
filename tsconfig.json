    "module": "ESNext",
    "esModuleInterop": true,
    "moduleResolution": "node16",
    "target": "es2021",
    "sourceMap": true,
    "strictNullChecks": true,
    "allowJs": true,
    "alwaysStrict": true,
    "checkJs": false,
    "emitDeclarationOnly": true
